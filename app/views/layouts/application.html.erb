<!DOCTYPE html>
<html>
  <head>
    <title>NumerologyChartMaker2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
      <!-- Neuatral Links -->
      <a href="/">Home</a><br>
      <!-- Logged Out -->
      <% if !logged_in? %>
      <%= link_to "Login", login_path %><br>
      <%= link_to "Sign up", signup_path %><br>
      <!-- Logged In -->
      <% else %>
      <%= link_to "Your Charts", user_charts_path(current_user) %><br>
      <%= link_to "Create New Chart", new_user_chart_path(current_user) %><br>
      <%= "Hi, #{current_user.first_name}" %><%="    "%><%= link_to "(Not you?)", logout_path, method: "delete" %><br>
      <% end %>
    </nav>
    <%= yield %>
  </body>
</html>
